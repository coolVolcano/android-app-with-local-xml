<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/seBlack"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/rlCat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtUpdate"
        android:layout_alignRight="@+id/txtUpdate"
        android:layout_below="@+id/txtUpdate" 
        android:layout_marginTop="10sp">

        <TextView style="@style/updateCateTitle"
            android:id="@+id/txtCat1"
            android:layout_alignBottom="@+id/chxCat1"
            android:layout_toLeftOf="@+id/chxCat1"/>

        <CheckBox
            android:id="@id/chxCat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rlCat1"
        android:layout_alignRight="@+id/rlCat1"
        android:layout_below="@+id/rlCat1" 
        android:layout_marginTop="10sp">

        <TextView style="@style/updateCateTitle"
            android:id="@+id/txtCat2"
            android:layout_alignBottom="@+id/chxCat2"
            android:layout_toLeftOf="@+id/chxCat2"/>

        <CheckBox
            android:id="@+id/chxCat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlCat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rlCat2"
        android:layout_alignRight="@+id/rlCat2"
        android:layout_below="@+id/rlCat2" 
        android:layout_marginTop="10sp">

        <TextView style="@style/updateCateTitle"
            android:id="@+id/txtCat3"
            android:layout_alignBottom="@+id/chxCat3"
            android:layout_toLeftOf="@+id/chxCat3"/>

        <CheckBox
            android:id="@+id/chxCat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp" />
        
    </RelativeLayout>

    <Button style="@style/updateBtn"
        android:background="@drawable/button_shape"
        android:id="@+id/btnUpdate"
       	android:layout_alignRight="@+id/rlCat2"
       	android:textColor="@color/text_view_selector"/>

</RelativeLayout>